{
  "name": "widgets-preact-boilerplate",
  "version": "0.9.0",
  "description": "Ready-to-go Preact starter project powered by webpack.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --inline --hot --progress",
    "start": "serve . -s -c 1 && node ./tools/start.cli.js",
    "prestart": "npm run build",
    "build": "cross-env NODE_ENV=production webpack -p --progress && node ./tools/build.cli.js",
    "prebuild": "mkdirp build",
    "test": "npm run lint && npm run -s test:karma && node ./tools/test.cli.js",
    "test:karma": "karma start test/karma.conf.js --single-run",
    "lint": "eslint ./src/ || true && node ./tools/lint.cli.js",
    "precommit": "lint-staged"
  },
  "keywords": [
    "preact",
    "boilerplate",
    "webpack"
  ],
  "license": "MIT",
  "author": "ashish Raina",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chai": "^4.1.1",
    "colors": "^1.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "core-js": "^2.5.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "eslint": "^4.4.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-react": "^7.2.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "isparta-loader": "^2.0.0",
    "json-loader": "^0.5.7",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "lint-staged": "^4.0.3",
    "mkdirp": "^0.5.1",
    "mocha": "^3.5.0",
    "ncp": "^2.0.0",
    "node-sass": "^4.5.3",
    "phantomjs-prebuilt": "^2.1.15",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.3",
    "raw-loader": "^0.5.1",
    "replace-bundle-webpack-plugin": "^1.0.0",
    "sass-loader": "^6.0.6",
    "serve": "^6.0.6",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "dependencies": {
    "preact": "^8.2.1",
    "preact-habitat": "^3.0.2",
    "promise-polyfill": "^6.0.2",
    "proptypes": "^1.1.0"
  },
  "main": "webpack.config.babel.js",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zouhir/preact-widgets-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/zouhir/preact-widgets-boilerplate/issues"
  },
  "homepage": "https://github.com/zouhir/preact-widgets-boilerplate#readme",
  "lint-staged": {
    "{src,test,tools}/**/*.{js,jsx,html,scss}": [
      "npm run lint",
      "prettier --write --print-width 80 --single-quote",
      "git add"
    ]
  }
}
